<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_list_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajdeep.homework2.DisplayListRatingActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:text="Movies By Rating"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/subTitleVal2"
                android:layout_weight="0.07" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <TextView
                    android:text="Title : "
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title2"
                    android:layout_weight="0.38" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleValue2"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:text="Description :  "
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView32" />

            <TextView
                android:text="text View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionValue2"
                android:layout_weight="0.03" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="29dp">

                <TextView
                    android:text="Genre :"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView82"
                    android:layout_weight="0.36" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/genreValue2"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="25dp">

                <TextView
                    android:text="Rating :"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView122"
                    android:layout_weight="0.33" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingValue2"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="29dp">

                <TextView
                    android:text="Year :"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView142"
                    android:layout_weight="0.40" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearValue2"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="IMDB :"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView152" />

            <TextView
                android:text="imdbVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imdbVal2" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <Button
                    android:text=""
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:id="@+id/start2"
                    android:background="@drawable/first" />

                <Button
                    android:text=""
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:id="@+id/back2"
                    android:background="@drawable/previous" />

                <Button
                    android:text="Finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/finish2"
                    android:layout_weight="1" />

                <Button
                    android:text=""
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:id="@+id/next2"
                    android:background="@drawable/next"
                    android:layout_weight="0.25" />

                <Button
                    android:text=""
                    android:layout_width="53dp"
                    android:layout_height="47dp"
                    android:id="@+id/last2"
                    android:background="@drawable/last" />
            </LinearLayout>

        </LinearLayout>



</RelativeLayout>
