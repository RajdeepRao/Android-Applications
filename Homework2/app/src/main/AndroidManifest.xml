<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rajdeep.homework2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMovieActivity" android:label="Add Movie" />
        <activity android:name=".EditActivity" android:label="Edit Movie"/>
        <activity android:name=".DeleteMovieActivity" />
        <activity android:name=".DisplayListYearActivity" android:label="Movies By Year">
            <intent-filter>
                <action android:name="com.example.rajdeep.homework2.intent.action.YEAR"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".DisplayListRatingActivity" android:label="Movies by Rating">
            <intent-filter>
                <action android:name="com.example.rajdeep.homework2.intent.action.RATING"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>

</manifest>